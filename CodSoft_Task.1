import java.util.Random;
import java.util.Scanner;
public class Main1 {
    static int score = 0; 
    static int round = 0; 
    public static void fun() {
        Random r = new Random();
        int nmbr = r.nextInt(100) + 1; 
        Scanner s = new Scanner(System.in);
        int attempt = 0;
        int roundscore=0;
        while (attempt < 5) {
            System.out.println("Enter your guess:");
            int guess = s.nextInt();
            attempt++;
            if (guess == nmbr) {
                System.out.println("Correct!");
                roundscore=10-attempt+1;
                score=score+roundscore;
                break;
            } else if (guess < nmbr) {
                System.out.println("Too low!");
            } else {
                System.out.println("Too high!");
            }}
        if (attempt == 5) {
            System.out.println("You were out of attempts. The correct number is: " + nmbr);
        }
        round++; 
  System.out.println("you scored "+roundscore+" in this round.");
    }
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
         String str1; 
        String str2 = "YES"; 
        do {
            fun();
            System.out.println("Do you want to play again? Enter YES or NO:");
             str1 = s.next(); 
        } while (str1.equals(str2)); 
        System.out.println("Game over. Your score is " + score + " in " + round + " rounds.");
    }}
